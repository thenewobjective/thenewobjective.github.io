    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": "build",
            "type": "shell",
            "command": "bundle exec jekyll build"
        },
        {
            "label": "serve",
            "type": "shell",
            "group": "build",
            "command": "bundle exec jekyll serve --watch"
        },
        {
            "label": "install",
            "type": "shell",
            "group": "build",
            "command": "bundle install"
        },
        {
            "label": "build-serve drafts",
            "type": "shell",
            "group": "build",
            "command": "bundle exec jekyll serve --drafts --watch",
            "problemMatcher": []
        }
    ]
}